check program ${parserName}-parser with path "{{ monit_home }}/status_${parserName}_topology.sh"
  start program "{{ monit_home }}/start_${parserName}_topology.sh" with timeout {{ topology_start_timeout }} seconds
  stop program "{{ monit_home }}/stop_$parserName}_topology.sh" with timeout {{ topology_stop_timeout }} seconds
  if status != 0 then restart
  group ${parserName}
  group parsers
  group metron
